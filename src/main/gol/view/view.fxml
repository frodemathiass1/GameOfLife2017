                <MenuItem fx:id="url7" text="Brain" />
                <SeparatorMenuItem />
                <MenuItem fx:id="url8" text="Cordership" />
                <SeparatorMenuItem />
                <MenuItem fx:id="url9" text="Cow" />
                <SeparatorMenuItem />
                <MenuItem fx:id="url10" text="Loaflipflop" />
            </items>
            <HBox.margin>
                <Insets top="6.0" />
            </HBox.margin>
        </MenuButton>

        <Button contentDisplay="CENTER" layoutX="169.0" layoutY="22.0" onAction="#handleTheBomber" prefHeight="25.0" styleClass="mystery-button,btnStyle" stylesheets="@stylesheet.css">
            <font>
                <Font size="10.0" />
            </font>
            <HBox.margin>
                <Insets top="6.0" />
            </HBox.margin>
        </Button>
      <Separator maxHeight="30.0" opacity="0.6" orientation="VERTICAL">
         <HBox.margin>
            <Insets top="7.0" />
         </HBox.margin></Separator>

        <MenuButton onAction="#handleGridSizeEvents" prefHeight="25.0" style="-fx-arrows-visible: false" styleClass="gridSize-button, btnStyle" stylesheets="@stylesheet.css">
            <items>
                <MenuItem styleClass="highlight-label" text="Select gridsize" />
                <SeparatorMenuItem />
                <!--<MenuItem fx:id="micro" text="Micro" /> <SeparatorMenuItem/>-->
                <MenuItem fx:id="small" text="Small" />
                <SeparatorMenuItem />
                <MenuItem fx:id="normal" text="Normal" />
                <SeparatorMenuItem />
                <MenuItem fx:id="large" text="Large" />
                <SeparatorMenuItem />
                <MenuItem fx:id="mega" text="Larger" />
            </items>
            <HBox.margin>
                <Insets top="2.0" />
            </HBox.margin>
        </MenuButton>
        <MenuButton maxWidth="25.0" prefHeight="25.0" styleClass="pick-colors, btnStyle" stylesheets="@stylesheet.css">
            <items>

                <MenuItem styleClass="highlight-label" text="Type ">
                    <graphic>
                        <Label text="  Select colors" />
                    </graphic>
                </MenuItem>
                <SeparatorMenuItem />
                <MenuItem text="Cell">
                    <graphic>
                        <ColorPicker fx:id="cpCell" onAction="#setCellColor" prefHeight="25.0" prefWidth="90.0" />
                    </graphic>
                </MenuItem>

                <SeparatorMenuItem />
                <MenuItem text="Grid">
                    <graphic>
                        <ColorPicker fx:id="cpGrid" onAction="#setGridColor" prefHeight="25.0" prefWidth="90.0" />
                    </graphic>
                </MenuItem>

                <SeparatorMenuItem />
                <MenuItem text="Background">
                    <graphic>
                        <ColorPicker fx:id="cpBackground" onAction="#setBackgroundColor" prefHeight="25.0" prefWidth="90.0" />
                    </graphic>
                </MenuItem>

                <SeparatorMenuItem />
                <MenuItem text="Random">
                    <graphic>
                        <Button fx:id="randomAll" onAction="#setRandomColor" prefHeight="25.0" prefWidth="90.0" text="Random" />
                    </graphic>
                </MenuItem>

                <SeparatorMenuItem />
                <MenuItem text="Default">
                    <graphic>
                        <Button fx:id="resetAll" onAction="#resetColor" prefHeight="25.0" prefWidth="90.0" text="Default" />
                    </graphic>
                </MenuItem>
            </items>
            <HBox.margin>
                <Insets top="4.0" />
            </HBox.margin>
        </MenuButton>
      <Separator maxHeight="30.0" opacity="0.6" orientation="VERTICAL">
         <HBox.margin>
            <Insets top="7.0" />
         </HBox.margin></Separator>
        <Label fx:id="speedIcon" prefHeight="13.0" styleClass="speedSlider-label" stylesheets="@stylesheet.css">
            <font>
                <Font size="12.0" />
            </font>
            <HBox.margin>
                <Insets top="8.0" />
            </HBox.margin>
        </Label>
        <Slider fx:id="speedSlider" majorTickUnit="10.0" max="2.5" min="0.5" minorTickCount="60" showTickMarks="true" value="1.5">
            <HBox.margin>
                <Insets top="14.0" />
            </HBox.margin>
        </Slider>
      <Separator maxHeight="30.0" opacity="0.6" orientation="VERTICAL">
         <HBox.margin>
            <Insets top="7.0" />
         </HBox.margin></Separator>
        <Label fx:id="zoomIcon" onMouseClicked="#resetZoom" prefHeight="13.0" prefWidth="25.0" styleClass="zoomSlider-label" stylesheets="@stylesheet.css">
            <HBox.margin>
                <Insets top="8.0" />
            </HBox.margin>
            <font>
                <Font size="12.0" />
            </font>
        </Label>
        <Slider fx:id="zoomSlider" blockIncrement="3.0" majorTickUnit="5.0" max="40" min="5" minorTickCount="1" value="20">
            <HBox.margin>
                <Insets right="10.0" top="14.0" />
            </HBox.margin>
        </Slider>
      <Separator disable="true" maxHeight="30.0" opacity="0.6" orientation="VERTICAL">
         <HBox.margin>
            <Insets top="7.0" />
         </HBox.margin></Separator>
        <ToggleButton fx:id="toggleSound" prefHeight="25.0" styleClass="toggle-sound, btnStyle" stylesheets="@stylesheet.css">
            <HBox.margin>
                <Insets right="4.0" top="5.0" />
            </HBox.margin>
        </ToggleButton>
    </HBox>
</AnchorPane>
