<AnchorPane prefHeight="510.0" prefWidth="800.0" style="-fx-background-color: DIMGRAY;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.gol.controller.GUIController">


    <MenuBar fx:id="menuBar" layoutY="-1.0" styleClass="menu-box" AnchorPane.bottomAnchor="592.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Menu text="File">
            <MenuItem fx:id="fileSelect" onAction="#loadFileFromDisk" text="Load file from disk" />
            <MenuItem fx:id="URLSelect" onAction="#loadFileFromURL" text="Load file from URL" />
            <SeparatorMenuItem />
            <MenuItem onAction="#quit" text="Quit" />
        </Menu>

        <Menu text="Info">
            <items>
                <MenuItem fx:id="gol" onAction="#aboutGameOfLife" text="About Game of Life" />
                <MenuItem fx:id="playing" onAction="#howToPlay" text="How to play" />
                <MenuItem fx:id="contact" onAction="#showInfo" text="Contact" />
            </items>
        </Menu>
    </MenuBar>


    <!--


