    <HBox layoutY="579.0" maxHeight="158.0" maxWidth="800.0" prefHeight="45.0" prefWidth="800.0" spacing="6.0" styleClass="menu-box" stylesheets="@stylesheet.css" AnchorPane.bottomAnchor="-3.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="579.0">
        <ToggleButton fx:id="play" layoutY="20" prefHeight="25.0" prefWidth="85.0" stylesheets="@stylesheet.css" text="Play">
            <HBox.margin>
                <Insets left="8.0" top="10.0" />
            </HBox.margin>
            <font>
                <Font size="10.0" />
            </font>
        </ToggleButton>
        <Button fx:id="next" ellipsisString="" onAction="#nextStep" prefHeight="25.0" prefWidth="77.0" stylesheets="@stylesheet.css" text="Next" textOverrun="CLIP">
            <HBox.margin>
                <Insets top="10.0" />
            </HBox.margin>
        </Button>
        <Button cancelButton="true" contentDisplay="CENTER" onAction="#reset" prefHeight="25.0" prefWidth="77.0" stylesheets="@stylesheet.css" text="Reset">
            <font>
                <Font size="10.0" />
            </font>
            <HBox.margin>
                <Insets top="10.0" />
            </HBox.margin>
        </Button>
        <Separator maxHeight="30.0" opacity="0.6" orientation="VERTICAL">
         <HBox.margin>
            <Insets top="7.0" />
         </HBox.margin></Separator>

        <MenuButton contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" onAction="#handlePatternSelector" prefHeight="25.0" styleClass="pattern-button, btnStyle" stylesheets="@stylesheet.css">
            <items>
                <MenuItem styleClass="highlight-label" text="Patterns" />
                <SeparatorMenuItem />
                <MenuItem fx:id="url1" text="Airforce" />
