<?xml version="1.0" encoding="UTF-8"?>

<?language javascript?>


<?import javafx.geometry.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.101" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.gol.controller.MainController">


    <MenuBar fx:id="menuBar" layoutY="-1.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
             AnchorPane.topAnchor="0.0">
        <Menu text="File">
            <MenuItem fx:id="fileSelect" onAction="#selectFile" text="Load file from disk"/>
            <MenuItem fx:id="URLSelect" onAction="#selectURL" text="Load file from URL"/>
            <MenuItem onAction="#closeApp" text="Close application"/>
        </Menu>

        <Menu text="Info">
            <items>
                <MenuItem fx:id="gol" onAction="#aboutGol" text="About Game of Life"/>
                <MenuItem fx:id="contact" onAction="#showInfo" text="Contact"/>
            </items>
        </Menu>
    </MenuBar>

    <Canvas fx:id="canvas" height="550.0" layoutY="27.0" onMouseClicked="#handleMouseEvent"
            onMouseDragged="#handleMouseEvent" width="800.0" AnchorPane.bottomAnchor="42.0" AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="29.0"/>

    <HBox layoutY="576.0" prefWidth="800.0" spacing="10.0" stylesheets="@stylesheet.css" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="579.0">
        <Button fx:id="play" onAction="#play" prefHeight="25.0" prefWidth="60.0" styleClass="btnStyle"
                stylesheets="@stylesheet.css" text="Play">
            <HBox.margin>
                <Insets left="15.0" top="8.0"/>
            </HBox.margin>
            <font>
                <Font size="10.0"/>
            </font>
        </Button>
        <Button onAction="#nextGeneration" prefHeight="25.0" prefWidth="60.0" styleClass="btnStyle"
                stylesheets="@stylesheet.css" text="Next">
            <HBox.margin>
                <Insets top="8.0"/>
            </HBox.margin>
        </Button>
        <Button contentDisplay="CENTER" onAction="#reset" prefHeight="25.0" prefWidth="60.0" styleClass="btnStyle"
                stylesheets="@stylesheet.css" text="Reset">
            <font>
                <Font size="10.0"/>
            </font>
            <HBox.margin>
                <Insets top="8.0"/>
            </HBox.margin>
        </Button>
        <Separator orientation="VERTICAL" prefHeight="38.0"/>

        <MenuButton onAction="#handleWebBoards" prefHeight="25.0" prefWidth="25.0" styleClass="pattern-button, btnStyle"
                    stylesheets="@stylesheet.css">
            <items>
                <MenuItem text="Patterns" styleClass="highlight-label"/>
                <SeparatorMenuItem/>
                <MenuItem fx:id="url1" text="Airforce"/>
                <SeparatorMenuItem/>
                <MenuItem fx:id="url2" text="B52"/>
                <SeparatorMenuItem/>
                <MenuItem fx:id="url3" text="Backrake"/>
                <SeparatorMenuItem/>
                <MenuItem fx:id="url4" text="Beacon maker"/>
                <SeparatorMenuItem/>
                <MenuItem fx:id="url5" text="Big Glider"/>
                <SeparatorMenuItem/>
                <MenuItem fx:id="url6" text="Bottle"/>
                <SeparatorMenuItem/>
                <MenuItem fx:id="url7" text="Brain"/>
                <SeparatorMenuItem/>
                <MenuItem fx:id="url8" text="Cordership"/>
                <SeparatorMenuItem/>
                <MenuItem fx:id="url9" text="Cow"/>
                <SeparatorMenuItem/>
                <MenuItem fx:id="url10" text="Loaflipflop"/>
            </items>
            <HBox.margin>
                <Insets top="8.0"/>
            </HBox.margin>
        </MenuButton>

        <Button contentDisplay="CENTER" layoutX="169.0" layoutY="22.0" onAction="#mysteryButton" prefHeight="25.0"
                prefWidth="25.0" styleClass="btnStyle" stylesheets="@stylesheet.css" text="?">
            <font>
                <Font size="10.0"/>
            </font>
            <HBox.margin>
                <Insets top="8.0"/>
            </HBox.margin>
        </Button>
        <Separator layoutX="338.0" layoutY="10.0" orientation="VERTICAL" prefHeight="38.0">
            <HBox.margin>
                <Insets bottom="4.0"/>
            </HBox.margin>
        </Separator>

        <MenuButton onAction="#boardSizeObserver" prefHeight="25.0" prefWidth="60.0"
                    styleClass="gridSize-button, btnStyle" stylesheets="@stylesheet.css">
            <items>
                <MenuItem text="Select grid" styleClass="highlight-label"/>
                <SeparatorMenuItem/>
                <!--<MenuItem fx:id="micro" text="Micro" /> <SeparatorMenuItem/>-->
                <MenuItem fx:id="small" text="Small"/>
                <SeparatorMenuItem/>
                <MenuItem fx:id="normal" text="Normal"/>
                <SeparatorMenuItem/>
                <MenuItem fx:id="large" text="Large"/>
            </items>
            <HBox.margin>
                <Insets top="8.0"/>
            </HBox.margin>
        </MenuButton>
        <MenuButton prefHeight="25.0" prefWidth="25.0" styleClass="pick-colors, btnStyle" stylesheets="@stylesheet.css">
            <items>

                <MenuItem text="Type " styleClass="highlight-label">
                    <graphic>
                        <Label text="  Select colors"/>
                    </graphic>
                </MenuItem>
                <SeparatorMenuItem/>
                <MenuItem text="Cell">
                    <graphic>
                        <ColorPicker fx:id="cellColor" onAction="#setCellColor" prefHeight="25.0" prefWidth="90.0"/>
                    </graphic>
                </MenuItem>

                <SeparatorMenuItem/>
                <MenuItem text="Grid">
                    <graphic>
                        <ColorPicker fx:id="gridColor" onAction="#setGridColor" prefHeight="25.0" prefWidth="90.0"/>
                    </graphic>
                </MenuItem>

                <SeparatorMenuItem/>
                <MenuItem text="Background">
                    <graphic>
                        <ColorPicker fx:id="backgroundColor" onAction="#setBackgroundColor" prefHeight="25.0"
                                     prefWidth="90.0"/>
                    </graphic>
                </MenuItem>

                <SeparatorMenuItem/>
                <MenuItem text="Random">
                    <graphic>
                        <Button fx:id="randomAll" onAction="#setRandomColor" prefHeight="25.0" prefWidth="90.0"
                                text="Random"/>
                    </graphic>
                </MenuItem>

                <SeparatorMenuItem/>
                <MenuItem text="Default">
                    <graphic>
                        <Button fx:id="resetAll" onAction="#resetColor" prefHeight="25.0" prefWidth="90.0"
                                text="Default"/>
                    </graphic>
                </MenuItem>
            </items>
            <HBox.margin>
                <Insets top="8.0"/>
            </HBox.margin>
        </MenuButton>
        <ToggleButton fx:id="toggleButton" prefHeight="25.0" prefWidth="25.0" styleClass="toggle-button, btnStyle"
                      stylesheets="@stylesheet.css">
            <HBox.margin>
                <Insets top="8.0"/>
            </HBox.margin>
        </ToggleButton>
        <Separator orientation="VERTICAL" prefHeight="38.0">
            <HBox.margin>
                <Insets bottom="4.0"/>
            </HBox.margin>
        </Separator>
        <Label prefHeight="13.0" prefWidth="37.0" styleClass="speedSlider-label" stylesheets="@stylesheet.css">
            <font>
                <Font size="12.0"/>
            </font>
            <HBox.margin>
                <Insets left="5.0" top="12.0"/>
            </HBox.margin>
        </Label>
        <Slider fx:id="speedSlider" majorTickUnit="6.0" max="2.5" min="0.5" minorTickCount="60" prefHeight="26.0"
                prefWidth="70.0" value="1.5">
            <HBox.margin>
                <Insets top="8.0"/>
            </HBox.margin>
        </Slider>
        <Separator orientation="VERTICAL" prefHeight="38.0">
            <HBox.margin>
                <Insets bottom="4.0"/>
            </HBox.margin>
        </Separator>
        <Label prefHeight="13.0" prefWidth="37.0" styleClass="zoomSlider-label" stylesheets="@stylesheet.css">
            <HBox.margin>
                <Insets top="12.0"/>
            </HBox.margin>
            <font>
                <Font size="12.0"/>
            </font>
        </Label>
        <Slider fx:id="zoomSlider" blockIncrement="1.0" majorTickUnit="3.0" max="20" min="3" value="5"
                minorTickCount="1" prefHeight="26.0" prefWidth="70.0">
            <HBox.margin>
                <Insets right="10.0" top="8.0"/>
            </HBox.margin>
        </Slider>
    </HBox>
</AnchorPane>
