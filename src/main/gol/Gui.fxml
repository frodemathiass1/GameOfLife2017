               </HBox.margin>
               <font>
                  <Font size="10.0" />
               </font></Button>
            <Button fx:id="resetBtn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#clearBoard" prefHeight="21.0" prefWidth="65.0" styleClass="buttons" stylesheets="@../style/stylesheet.css" text="Reset">
