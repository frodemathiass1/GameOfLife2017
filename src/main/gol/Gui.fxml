               <HBox.margin>
                  <Insets top="15.0" />
               </HBox.margin>
            </Slider>
            <Label text="Speedrate" textFill="WHITE">
               <font>
                  <Font size="10.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" top="17.0" />
               </HBox.margin>
            </Label>

            <Button fx:id="fasterRate" mnemonicParsing="false" onAction="#increaseRate" prefWidth="25.0" snapToPixel="false" styleClass="btn2" text="+">
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="slowerRate" mnemonicParsing="false" onAction="#decreaseRate" prefWidth="25.0" snapToPixel="false" styleClass="btn2" text="-">
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </Button>
